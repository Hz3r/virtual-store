---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import imgYoutube from "../assets/youtube.svg";
import fondoMobile from "../assets/fondoMobile.png";
import SwiperMain from "../components/SwiperMain.jsx";
---

<Layout>
  <Header />

  <main class="p-3">
    <section
      class="relative h-[calc(100vh-80px)] z-10 flex flex-col rounded-2xl overflow-hidden"
    >
      <div class="absolute inset-0 z-10">
        <img src={fondoMobile.src} alt="" class="h-full w-full object-cover" />
      </div>
      <section class="z-20 w-full flex flex-col items-center">
        <div class="mt-8">
          <img src={imgYoutube.src} alt="YouTube logo" />
        </div>
        <section class="text-center flex flex-col gap-2">
          <p class="uppercase text-blue-400 font-medium">
            Get <span>1000</span> Tickets free & get
          </p>
          <h1 class="uppercase text-3xl font-bold">
            <span class="text-blue-400 block">your exclusive</span> invite key
          </h1>

          <button class="uppercase mt-5 bg-blue-700 rounded-lg py-4">
            sign up now
          </button>
        </section>
        <section class="w-full h-auto mt-10">
          <SwiperMain client:load />
        </section>
      </section>
    </section>
  </main>
</Layout>
